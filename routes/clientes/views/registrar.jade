extends ../../../views/layout

block content

	if usuario 
		h1 HOLA #{usuario.user} 
		#saludo
			img(src='/images/hola.png')
			p Ahora danos tus requerimientos para gener tu página de e-comerce
	else

		h1 REGISTRO DE CLIENTE
		#registrar		

			form(method="POST", action="/clientes/registrar")
				table
					tr
						td 
							p Nombre: 
						td
							input(type="text" name="nombreUsuario")
						td
							p Nickname: 
						td
							input(type="text" name="nickName")
					tr 
						td
							p Password: 
						td
							input(type="password" name="contrasena")
						td
							p Confirmar Password: 
						td
							input(type="password" name="confirmarContrasena")
					tr
						td
							p Nombre Empresa: 
						td
							input(type="text" name="nombreEmpresa")
						td
							p E-mail:  
						td
							input(type="text" name="email")
					tr
						td
							p Telefono: 
						td
							input(type="text" name="telefono")
						td
							p Dirección: 
						td
							input(type="text" name="direccion")
					tr 
						td#celdaCentrada(colspan="4")
							button(type="submit" class="btn btn-primary") Regitrar 